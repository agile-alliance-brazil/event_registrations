%div.event
  %h3= link_to event.name, event
  %p.text-muted #{ l(event.start_date.to_date) } #{ t('title.until')} #{l(event.end_date.to_date) if event.start_date.present? && event.end_date.present? }

  %div.btn-group
    = link_to new_event_attendance_path(event), :class => 'btn btn-link' do
      %span{:class => 'glyphicon glyphicon-pencil'}
      = t('event.register.to_register_message')

    - if can? :attendances_list, Attendance
      = link_to attendances_path(event_id: event), :class => 'btn btn-link' do
        %span{:class => 'glyphicon glyphicon-th-list'}
        = t('actions.list_attendances')

      = link_to event_registration_groups_path(event), :class => 'btn btn-link' do
        %span{:class => 'glyphicon glyphicon-book'}
        = t('actions.list_groups')

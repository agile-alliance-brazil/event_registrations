<table class="table table-stripped">
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:first_name) %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= t('activerecord.attributes.user.admin') %></th>
      <th><%= t('activerecord.attributes.user.organizer') %></th>
    </tr>
  </thead>
  <tbody>
    <% @users_list.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user_path(user) %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.admin? %>
            <%= link_to update_to_admin_user_path(user), method: :patch do %>
              <i class="fas fa-toggle-on fa-2x"></i>
            <% end %>
          <% else %>
            <%= link_to update_to_admin_user_path(user), method: :patch do %>
              <i class="fas fa-toggle-off fa-2x"></i>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if user.organizer? %>
            <%= link_to update_to_organizer_user_path(user), method: :patch do %>
              <i class="fas fa-toggle-on fa-2x"></i>
            <% end %>
          <% else %>
            <%= link_to update_to_organizer_user_path(user), method: :patch do %>
              <i class="fas fa-toggle-off fa-2x"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

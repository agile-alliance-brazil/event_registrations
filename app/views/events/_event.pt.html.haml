%div.event
  %h3= link_to event.name, event
  %p.text-muted #{ l(event.start_date.to_date) } #{ t('title.until')} #{l(event.end_date.to_date) }

  %div.btn-group
    = link_to t('event.register.to_register_message'), new_event_attendance_path(event), :class => 'btn btn-link'

    - if can? :attendances_list, Attendance
      = link_to t('actions.list_attendances'), attendances_path(event_id: event), :class => 'btn btn-link'
      = link_to t('actions.list_groups'), event_registration_groups_path(event), :class => 'btn btn-link'

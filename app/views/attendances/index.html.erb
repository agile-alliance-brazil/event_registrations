<div class="breadcrumb">
  <div class="row">
    <div class="col-xl-12">
      <%= link_to t('events.index.title'), events_path %>
      >

      <%= link_to @event.name, event_path(@event) %>
      >

      <%= t('attendances.index.title') %>
    </div>
  </div>
</div>

<%= render 'attendances/attendances_summary' %>

<%= hidden_field_tag :event_id, @event.id %>

<div class="row">
  <div class="col-xl-12 col-sm-10 col-sm-offset-1">
    <div id="attendances_list">
      <%= render 'attendances/attendances_list', attendances_list: @attendances_list, list_title: t('attendances.index.title')  %>
    </div>
  </div>
</div>

<%= javascript_include_tag 'attendances/index' %>

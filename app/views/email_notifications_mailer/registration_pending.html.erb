<html>
  <body>
    <%= render 'email_header' %>

    <div style="padding-left: 100px;padding-right: 100px;padding-top: 30px;">
      <%= render 'greetings', event: @event, attendance: @attendance %>

      <p><%= I18n.t('attendances.pending_message_on_value', attendance_value: number_to_currency(@attendance.registration_value), status_name: I18n.t("activerecord.attributes.attendance.enums.status.#{@attendance.status}").downcase) %></p>

      <% if @attendance.grouped? && @attendance.pending? %>
        <p><%= I18n.t('attendances.message_on_group', group_name: @attendance.group_name) %></p>
      <% end %>

      <%= render 'email_signature', event: @event, attendance: @attendance %>
    </div>
  </body>
</html>

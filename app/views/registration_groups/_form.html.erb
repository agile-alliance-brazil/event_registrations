<%= form_for [@event, @group], class: 'form' do |f| %>
  <div class="nested-fields">
    <div class="row">
      <div class='col-xl-12 form-group <%= 'has-error' if @group.errors['name'].present? %>'>
        <%= f.label :name, class: 'control-label' %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        <span class="help-block"><%= @group.errors['name'].join(', ') %></span>
      </div>
    </div>

    <div class="row">
      <div class='col-xl-6 form-group <%= 'has-error' if @group.errors['discount'].present? %>'>
        <%= f.label :discount, class: 'control-label' %>
        <%= f.text_field :discount, class: 'form-control' %>
        <span class="help-block"><%= @group.errors['discount'].join(', ') %></span>
      </div>
      <div class='col-xl-6 form-group <%= 'has-error' if @group.errors['amount'].present? %>'>
        <%= f.label :amount, class: 'control-label' %>
        <%= f.text_field :amount, class: 'form-control' %>
        <span class="help-block"><%= @group.errors['amount'].join(', ') %></span>
      </div>
    </div>

    <div class="row">
      <div class='col-xl-6 form-group <%= 'has-error' if @group.errors['minimum_size'].present? %>'>
        <%= f.label :minimum_size, class: 'control-label' %>
        <%= f.text_field :minimum_size, class: 'form-control' %>
        <span class="help-block"><%= @group.errors['minimum_size'].join(', ') %></span>
      </div>
      <div class='col-xl-6 form-group <%= 'has-error' if @group.errors['capacity'].present? %>'>
        <%= f.label :capacity, class: 'control-label' %>
        <%= f.text_field :capacity, class: 'form-control' %>
        <span class="help-block"><%= @group.errors['capacity'].join(', ') %></span>
      </div>
    </div>

    <div class="row bottom-spaced-component">
      <div class='col-xl-6'>
        <%= f.check_box :paid_in_advance %>
        <%= f.label :paid_in_advance, class: 'form-check-label' %>
      </div>
      <div class='col-xl-6'>
        <%= f.check_box :automatic_approval %>
        <%= f.label :automatic_approval, class: 'form-check-label' %>
      </div>
    </div>

    <div class="row">
      <div class="col-xl-6">
        <%= f.submit t('general.buttons.save'), class: 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>

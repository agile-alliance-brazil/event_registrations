- title @attendance.event_name
%h2= t('attendances.show.title')

= render partial: 'shared/badge', locals: { attendance: @attendance }

= render partial: 'shared/registration_details', locals: { attendance: @attendance }

- if @attendance.grouped? && @attendance.pending?
  = render partial: 'attendances/group_registration', locals: { attendance: @attendance }
- else
  = render partial: "attendances/status_partials/#{@attendance.status}", locals: { attendance: @attendance }

= render partial: 'attendances/attendance_actions', locals: { event: @event, attendance: @attendance }

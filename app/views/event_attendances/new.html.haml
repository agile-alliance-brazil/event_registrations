- if @event.can_add_attendance?
  - title t('attendances.new.title.vacancy', event_name: @event.name)
- else
  %h4= t('attendances.new.title.no_vacancy', event_name: @event.name)

.auto_focus

= semantic_form_for([@event, @attendance]) do |form|
  = render 'form', form: form
  = form.actions do
    = form.action(:submit, label: :new_registration, button_html: { tabindex: autotab, class: 'btn btn-primary' })

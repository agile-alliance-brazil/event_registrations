%tr{ id: "attendance_#{attendance.id}" }
  %td= link_to "#{attendance.last_name}, #{attendance.first_name}", event_attendance_path(event, attendance), method: :get
  %td= attendance.organization
  %td= attendance.email

  %td
    - if attendance.registration_group.present?
      = link_to attendance.group_name, event_registration_group_path(event, attendance.registration_group)
  %td= attendance.state
  %td= t("activerecord.attributes.attendance.enums.payment_types.#{attendance.payment_type || 'nil'}")
  %td= attendance.registration_date.strftime('%d/%m/%Y %H:%M')
  %td= number_to_currency(attendance.registration_value)
  %td= t("activerecord.attributes.attendance.enums.status.#{attendance.status}", count: 1)
  %td
    - if attendance.pending? && attendance.grouped?
      = link_to change_status_event_attendance_path(event, attendance, :accept), method: :patch do
        %i{class: 'fa fa-check', 'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: t('attendances.actions.accept')}

    - if attendance.payable?
      = link_to change_status_event_attendance_path(event, attendance, :pay), method: :patch do
        %i{class: 'fa fa-credit-card', 'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: t('attendances.actions.pay')}

    - if attendance.confirmable?
      = link_to change_status_event_attendance_path(event, attendance, :confirm), method: :patch do
        %i{class: 'far fa-calendar-check', 'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: t('attendances.actions.confirm')}

    - if attendance.confirmed?
      = link_to change_status_event_attendance_path(event, attendance, :mark_show), method: :patch do
        %i{class: 'far fa-id-card', 'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: t('actions.receive_credential')}

    - if attendance.cancellable?
      = link_to event_attendance_path(event, attendance), method: :delete, data: { confirm: t('general.confirm', event: attendance.event_name ) } do
        %i{class: 'fa fa-ban', 'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: t('attendances.actions.cancel')}

    - if attendance.waiting?
      = link_to change_status_event_attendance_path(event, attendance, :dequeue), method: :patch do
        %i{class: 'far fa-thumbs-up', 'data-toggle' => 'tooltip', 'data-placement' => 'bottom',  title: t('attendances.actions.dequeue')}

    = link_to edit_event_attendance_path(event, attendance), method: :get do
      %i{class: 'far fa-edit', 'data-toggle' => 'tooltip', 'data-placement' => 'bottom',  title: t('general.edit')}

- title t('title.edit_profile', :user => @user.username)
- show_actions!
.auto_focus

= semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |form|
  = render 'form', :form => form
  = form.actions do
    = form.action(:submit, :edit_profile, :button_html => {:tabindex => autotab})

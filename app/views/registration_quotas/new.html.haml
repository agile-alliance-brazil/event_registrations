= stylesheet_link_tag 'registration_periods/new'

%h1= t('registration_quotas.new.title')

= semantic_form_for([@event, @registration_quota]) do |form|
  = form.inputs :quota_basics do
    = form.input :order, required: true, input_html: { tabindex: autotab }
    = form.input :price, as: :number, required: true, input_html: { tabindex: autotab }
    = form.input :quota, required: true, input_html: { tabindex: autotab }

  = form.actions do
    %div{class: 'row'}
      %span{class: 'col-xs-2'}
        = form.action(:submit, label: t('registration_quotas.new.submit'), button_html: { tabindex: autotab, class: 'btn btn-success' })
      %span{class: 'col-xs-2'}
        = form.action(:cancel, label: t('commons.button.cancel'), url: event_path(@event), button_html: { class: 'btn btn-danger' })

%hr

%section
  %div
    = render partial: 'registration_quotas/quotas_list', locals: { event: @event }

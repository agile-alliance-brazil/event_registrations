%div.badge-container
  %div.badge-item
    %div.first #{t('activerecord.attributes.attendance.full_name')}:
    %div.last= attendance.full_name
  %div.badge-item
    %div.first ID:
    %div.last= attendance.id
  %div.badge-item
    %div.first #{t('activerecord.attributes.attendance.status')}:
    %div.last= t("attendance.status.#{attendance.status}") if attendance.status.present?

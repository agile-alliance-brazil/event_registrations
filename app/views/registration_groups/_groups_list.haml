- if event.registration_groups.present?
  %h4= t('reistration_groups.list')
  %table.table
    %th= t('formtastic.labels.registration_group.name')
    %th= t('formtastic.labels.registration_group.created_at')
    %th= t('formtastic.labels.registration_group.leader')
    %th= t('formtastic.labels.registration_group.discount')
    %th= t('formtastic.labels.registration_group.minimum_size')
    %th= t('formtastic.labels.registration_group.amount')
    %th= t('formtastic.labels.registration_group.token')
    %th= t('formtastic.labels.registration_group.qtd_attendances')
    %th= t('formtastic.labels.registration_group.index.actions')
    - event.registration_groups.each do |group|
      %tr
        %td= link_to group.name, event_registration_group_path(event, group)
        %td= l group.created_at.to_date
        %td= group.leader_name
        %td= group.discount
        %td= group.minimum_size
        %td= number_with_precision(group.amount, precision: 2)
        %td= group.token
        %td= group.qtd_attendances
        %td
          =link_to event_registration_group_path(event, group), method: :delete, data: { confirm: t('registration_group.destroy_confirmation', registration_group: group.name ) } do
            %span{ class: 'fa fa-trash' }
- else
  %h5= t('events.show.no_groups_message')
